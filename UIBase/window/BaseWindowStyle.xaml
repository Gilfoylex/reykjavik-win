    <Style TargetType="{x:Type ct:TitleBarButton}" x:Key="BtStyle">
        <Setter Property="Background" Value="#01000000" />
        <Setter Property="HoverBackground" Value="#FFBDBDBD" />
        <Setter Property="PushBackground" Value="#FFBDBDBD" />
    </Style>
    <Style TargetType="{x:Type ct:TitleBarButton}" x:Key="CloseBtStyle">
        <Setter Property="Background" Value="#01000000" />
        <Setter Property="HoverBackground" Value="#FFFF6255" />
        <Setter Property="PushBackground" Value="#FFFF6255" />
    </Style>
    <Style TargetType="local:BaseWindow" x:Key="BaseWindowStyle">
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="White"/>
        <Setter Property="MinHeight" Value="10"/>
        <Setter Property="MinWidth" Value="10"/>
        <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality"/>
        <Setter Property="WindowChrome.WindowChrome">
            <Setter.Value>
                <WindowChrome GlassFrameThickness="1" 
                              ResizeBorderThickness="4"
                              CaptionHeight="0"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:BaseWindow}">
                    <Border x:Name="WindowRoot" Background="White">
                        <Grid x:Name="RootGrid">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="32" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0" x:Name="TitleBarBg"></Grid>
                            <Grid Grid.Row="0" x:Name="TitleBar">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="32"/>
                                    <ColumnDefinition Width="32"/>
                                    <ColumnDefinition Width="32"/>
                                    <ColumnDefinition Width="12"/>
                                </Grid.ColumnDefinitions>
                                <!--可供拖动窗口的区域-->
                                <Grid x:Name="CaptionArea"/>

                                <ct:TitleBarButton x:Name="MinimizeBtn" IconHeight="24" IconWidth="24" Grid.Column="1" Style="{StaticResource BtStyle}" Icon="{StaticResource minimize_light}"></ct:TitleBarButton>
                                <ct:TitleBarButton x:Name="MaximizeBtn" IconHeight="18" IconWidth="18" Grid.Column="2" Style="{StaticResource BtStyle}" Icon="{StaticResource maxmize_light}"></ct:TitleBarButton>
                                <ct:TitleBarButton x:Name="RestoreBtn" IconHeight="18" IconWidth="18" Grid.Column="2" Style="{StaticResource BtStyle}" Icon="{StaticResource restore_light}"></ct:TitleBarButton>
                                <ct:TitleBarButton x:Name="CloseBtn" IconHeight="24" IconWidth="24" Grid.Column="3" Style="{StaticResource CloseBtStyle}" Icon="{StaticResource close_light}"></ct:TitleBarButton>
                            </Grid>
                            <Grid x:Name="ClientArea"
                                  Grid.Row="1"
                                  Panel.ZIndex="10">
                                <ContentPresenter x:Name="PART_MainContentPresenter" Grid.Row="1"/>
                            </Grid>
                        </Grid>
                        
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="WindowState" Value="Maximized">
                            <Setter TargetName="RootGrid" Property="Margin" Value="6" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>